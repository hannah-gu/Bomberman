/**
 * This class will take the location of an object in the 2d array and convert it into x and y coordinates to display in StdDisplay. THE X AND Y FUNCTION LIKE A NORMAL GRIDa
 * @author student
 *
 */
public class Location {
	
	private int col;
	private int row;
	private int dim;
	private int ID;
	
	public Location(int row,int col, int dim,int ID){
		this.dim = dim;
		this.col=col;
		this.row=row;
		this.ID=ID;
	}
	
	/**
	 * converts to a number appropriate for StdDraw
	 * @return
	 */
	public int getX(){
		// IF you would like to check the x :System.out.println((900/dim)*col);
		return ((900/15)*col)+30;
		
	}
	
	/**
	 * converts to a number appropriate for StdDraw
	 * @return
	 */
	public int getY(){
		//if you would like to check the y: System.out.println((900/dim)*(14-row));
		return ((900/15)*(14-row))+30;
		
	}
	
	//used in displaying the world
	/**
	 * 0 = empty place
	 * 1 = unbreakable block
	 * 2 = breakable block
	 * 3 = character
	 * 4 = bomb
	 * 5 = bomb explosion
	 * 6 = block
	 * @return
	 */
	public int getID(){
		return ID;
	}
}

