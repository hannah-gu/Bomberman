
public class Bomb {
	private int duration;
	//direction 
	private int x;
	private int y;
	private int width;
	private boolean exploded;
	private boolean doneExploding;
	
	public Bomb(int duration, int x,int y, int width){
		this.duration = duration;
		this.x = x;
		this.y = y;
		this.width = width;
		exploded = false;
		doneExploding = false;
		
	}
	
	public void startExplosion(){
		CountDown cd = new CountDown(duration);
		cd.countDown();
		exploded = true;
		System.out.println("yippekiye Oedipus");
		
	}
	
	public void explode(){
		if(exploded){
			CountDown cd = new CountDown(1);
			cd.countDown();
			System.out.println("boom is over");
			doneExploding = true;
		}
	}
	
	
	
	
	
	
	
	public int getX() {
		return x;
	}
	public int getY() {
		return y;
	}
	public int getWidth() {
		return width;
	}
	
	
	public void draw(int xCoor,int yCoor,String name){
		if(!exploded){
			drawBomb(xCoor,yCoor,name);
		}
		else{
			drawExplosion(xCoor,yCoor,name);
		}
		
	}
	
	private void drawBomb(int xCoor,int yCoor,String name){
		System.out.println("hello");
		
	}
	
	private void drawExplosion(int xCoor,int yCoor,String name){
		System.out.println("bye");
	}
	
	

}
