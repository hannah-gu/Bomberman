
import java.awt.Color;
import java.awt.event.KeyEvent;
import java.util.Scanner;

//import components.StdDraw;

public class DrawMain {

	public static void main(String[] args) {

		

		Scanner in = new Scanner(System.in);
		while(true){	
			
			System.out.println("Welcome to Bomberman! Use WASD to move and the spacebar to throw "
					+ "a bomb.\nFind the Golden Star hidden behind a block to win!\nEnter P to play or Q to "
					+ "quit: ");
					String input = in.next();
					if(input.equals("P")){
						
						int dimension = 900;
						StdDraw.setXscale(0.0,900.0);
						StdDraw.setYscale(0.0,900.0);
						World world = new World();
						
						
						Player p1 = new Player(0,0,10, "Sprite1Front.png",1,world);
						p1.draw();
						int[] k1 = {KeyEvent.VK_W, KeyEvent.VK_S, KeyEvent.VK_D, KeyEvent.VK_A, KeyEvent.VK_SPACE};
						p1.setKeys(k1);
						
						
						Player p2 = new Player(900,900,10,"Sprite2Front.png", 2, world);
						p2.draw();
						int[] k2 = {KeyEvent.VK_UP, KeyEvent.VK_DOWN, KeyEvent.VK_RIGHT, KeyEvent.VK_LEFT, KeyEvent.VK_SHIFT};
						p2.setKeys(k2);
						
						while(!world.getGameOver()){
							StdDraw.show(50);
							p1.animateCharacter();
							p2.animateCharacter();
							StdDraw.show();
						}

					}else if(input.equals("Q")){
						
						break;
						
					}else{
						
						continue;
						
					}
			
			
			
			
		}
		
	}
}
