public class CountDown {
	private int seconds;
	private long start;
	private long stop;

	public CountDown(int s){
	seconds = s;
	start = System.currentTimeMillis();
	stop = start+seconds*1000;
	}

	public boolean check(){
		if(System.currentTimeMillis()>=stop){
			return true;
		}
		else{return false;}
	}
	
	public void reset(int sec){
		seconds = sec;
		start = System.currentTimeMillis();
		stop = start+seconds*1000;
	}
	
	public void reset(){
		start = System.currentTimeMillis();
		stop = start+seconds*1000;
	}


}
