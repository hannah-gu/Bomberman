
public class CountDown {
	private int seconds;
	
	public CountDown(int s){
		seconds = s;
	}
	
	public boolean countDown(){
		long stop = System.currentTimeMillis()+(seconds*1000);
		boolean done = false;
		int n = 0;
		while(System.currentTimeMillis()<stop){
			System.out.println(n/1000);
			n++;
		}
		done = true;
		return done;
		
	}

}
