public class CountDown{
	private int seconds;
	
	public CountDown(int s){
		seconds = s;
	}
	
	/**
	 * 
	 * @return true when the countdown is finished
	 */
	public boolean countDown(){
		while(seconds>=0){
			try {
				Thread.sleep(1000);
				System.out.println(seconds);
				seconds--;
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return true;
	}

}
