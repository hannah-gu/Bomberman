import java.awt.event.KeyEvent;


public class Player implements Entity {

	private int x,y;
	private double moveSpeed = .045;
	private int width;
	
	public Entity(int x, int y, int width)
	{
		StdDraw.setXscale(-1.0, 1.0);
        	StdDraw.setYscale(-1.0, 1.0);
        	this.x=x;
        	this.y=y;
        	this.width;
       
        	StdDraw.picture(x, y, "cursor.png");
        
	}
	

	public void draw(int xCoor,int yCoor, String name){
        	
        	StdDraw.picture(xCoor, yCoor, name);
		StdDraw.show(25);
        }
	
	
	}
	public void animateCharacter()

	{
		DrawWorld xcv = new DrawWorld();
		while(true)
		{
			if( xcv.isValid( x,Math.abs(y+moveSpeed))){
				if(StdDraw.isKeyPressed(KeyEvent.VK_W) && Math.abs(y+moveSpeed)<1.0  ){
					y +=moveSpeed;
					xcv.createWorld();
					draw(x,y,"cursor.png");
					
				}
				if(StdDraw.isKeyPressed(KeyEvent.VK_S) && Math.abs(y-moveSpeed)<1.0 ){
					y -=moveSpeed;
					xcv.createWorld();
					draw(x,y,"cursor.png");
				}
				
				
		}	
				if(StdDraw.isKeyPressed(KeyEvent.VK_D) && Math.abs(x+moveSpeed)<1.0 ){
					x +=moveSpeed;
					xcv.createWorld();
					draw(x,y,"cursor.png");
				}
				if(StdDraw.isKeyPressed(KeyEvent.VK_A) && Math.abs(x-moveSpeed)<1.0 ){
					x -=moveSpeed;
					xcv.createWorld();
					draw(x,y,"cursor.png");
				}
			
			
		
		
		}
	}
	
}
