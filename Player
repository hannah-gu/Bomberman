import java.awt.event.KeyEvent;


public class Player implements allObjects {

	private int x,y;
	private double moveSpeed = .045;
	private int width;
	private int direction = 0;
	
	public Entity(int x, int y, int width)
	{
		StdDraw.setXscale(-1.0, 1.0);
        	StdDraw.setYscale(-1.0, 1.0);
        	this.x=x;
        	this.y=y;
        	this.width;
       
        	StdDraw.picture(posX, posY, "cursor.png");
        
	}
	

	public void draw(){
		}
	
	
	}
	public void animateCharacter()

	{
		DrawWorld xcv = new DrawWorld();
		while(true)
		{
			if( xcv.isValid( posX,Math.abs(posY+moveSpeed))){
				if(StdDraw.isKeyPressed(KeyEvent.VK_W) && Math.abs(posY+moveSpeed)<1.0  ){
					posY +=moveSpeed;
					direction = 0;
					xcv.createWorld();
					StdDraw.picture(posX, posY, "cursor.png");
					
					StdDraw.show(25);
				}
				if(StdDraw.isKeyPressed(KeyEvent.VK_S) && Math.abs(posY-moveSpeed)<1.0 ){
					posY -=moveSpeed;
					direction = 270;
					xcv.createWorld();
					StdDraw.picture(posX, posY, "cursor.png");
					
					StdDraw.show(25);
				}
				
				
		}	
				if(StdDraw.isKeyPressed(KeyEvent.VK_D) && Math.abs(posX+moveSpeed)<1.0 ){
					posX +=moveSpeed;
					direction = 90;
					xcv.createWorld();
					StdDraw.picture(posX, posY, "cursor.png");
					
					StdDraw.show(25);
				}
				if(StdDraw.isKeyPressed(KeyEvent.VK_A) && Math.abs(posX-moveSpeed)<1.0 ){
					posX -=moveSpeed;
					direction = 180;
					xcv.createWorld();
					StdDraw.picture(posX, posY, "cursor.png");
					
					StdDraw.show(25);
				}
			
			
		
		
		}
	}
	
	public int getX(){
		return x;
	}
	
	public int getY(){
		return y;
	}
	
	public int getDirection(){
		return direction;
	}
	
}
