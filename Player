import java.awt.Color;
import java.awt.event.KeyEvent;


public class Player implements Entity {

	private int x,y;
	private double moveSpeed = 15.0;
	private double width;
	private String pic;
	private int countBombs;
	private int[] keys;

	/**
	 * Creates a new Player 
	 * @param x xCoor
	 * @param y yCoor
	 * @param width width to display in pixels
	 * @param picName name of the picture to display
	 */
	public Player(int x, int y, double width, String picName)
	{
			//has to do with drawing in StdDraw
			StdDraw.setXscale(0, 900);
        	StdDraw.setYscale(0, 900);
        	this.x=x;
        	this.y=y;
        	pic = picName;
        	countBombs = 0;
        	//initial display
        	StdDraw.picture(x, y, "Sprite1Front.png",width,width);
        	keys = new int[5];
        
	}
	
	/**
	 * sets keys for motion when a key is pressed
	 * @param a
	 */
	public void setKeys(int[] a){
		for(int i = 0; i<5; i++){
			keys[i]=a[i];
		}
		
	}

	public int getX(){
		return x;
	}
	
	public int getY(){
		return y;
	}
	
	public double getWidth(){
		return width;
	}
	
	/**
	 * Draws player
	 * @param xCoor 
	 * @param yCoor
	 * @param name
	 */
	public void draw(int xCoor, int yCoor, String name){
        	
        StdDraw.picture(xCoor, yCoor, name);
		StdDraw.show(25);
		
        }
	
	//needed to match Entity
	public void draw(){
		StdDraw.picture(x,y,pic,width);
	}


	/**
	 * animates and moves player according to key presses
	 * @param xcv World
	 */
	public void animateCharacter(World xcv)

	{
		while(true)
		{
			if( xcv.isValid((double) x,y+moveSpeed)){
				
				if(StdDraw.isKeyPressed(keys[0]) ){
					y +=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Back.png");
					StdDraw.show();
					y+=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Back2.png");
					StdDraw.show();

				}
			}
			if( xcv.isValid((double) x, y-moveSpeed)){
				if(StdDraw.isKeyPressed(keys[1]) ){
					y -=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Front.png");
					StdDraw.show();
					y-=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Front2.png");
					StdDraw.show();
				}
			}
			if( xcv.isValid(x+moveSpeed,(double)y)){

			
				if(StdDraw.isKeyPressed(keys[2]) ){
					x +=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Right.png");
					StdDraw.show();
					x+=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Right2.png");
					StdDraw.show();
				}
			}
			if( xcv.isValid(x-moveSpeed,(double)y)){
				if(StdDraw.isKeyPressed(keys[3])){
					x -=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Left.png");
					StdDraw.show();
					x-=moveSpeed/2;
					StdDraw.show(50);
					xcv.display();
					draw(x,y,"Sprite1Left2.png");
					StdDraw.show();
				}

			}
			if(StdDraw.isKeyPressed(keys[4])){
					Bomb b = new Bomb(8,x,y,width,"bomb.png");
					b.draw(x,y,"bomb.png",xcv);
					

			}


		}
	}

}
